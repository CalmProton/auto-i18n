# Rename this file to .env and fill in the values for your environment
# Supported providers: openai, anthropic, deepseek
TRANSLATION_PROVIDER=openai

# OpenAI configuration
OPENAI_API_URL=https://api.openai.com/v1/responses
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Anthropic configuration
ANTHROPIC_API_URL=https://api.anthropic.com/v1/messages
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Personal access token or GitHub App installation token with `repo` scope
AUTO_I18N_GITHUB_TOKEN=your-github-token

# Optional. Override the GitHub API base URL (defaults to `https://api.github.com`).
# AUTO_I18N_GITHUB_API_URL=https://api.github.com
# Optional. Custom user agent used for API requests.
# AUTO_I18N_GITHUB_APP_NAME=your-github-app-name
